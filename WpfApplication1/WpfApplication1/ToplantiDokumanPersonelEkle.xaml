        Name="wnm"              >
    <Grid>
        <!--ItemsSource="{Binding}" SelectionChanged="depSec_SelectionChanged"-->

        <Label Content="Toplantıya Katılacak Personel" HorizontalAlignment="Left" Margin="10,352,0,0" VerticalAlignment="Top" Width="169"/>
        <Label Content="İlgili Dokümanlar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Name="penke" Content="Ekle" HorizontalAlignment="Left" Margin="540,352,0,0" VerticalAlignment="Top" Width="75" Click="penke_Click"  />
        <Button Name="pcikar" Content="Çıkar" HorizontalAlignment="Left" Margin="205,353,0,0" VerticalAlignment="Top" Width="75" Click="pcikar_Click"/>

        <Button Name="kaydet" Content="KAYDET" HorizontalAlignment="Left" Margin="421,734,0,0" VerticalAlignment="Top" Width="75" Click="kaydet_Click" />
        <TextBox Name="gizli_no" IsReadOnly="True" IsEnabled="False" Visibility="Hidden"  HorizontalAlignment="Left" Height="26" Margin="137,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DataGrid Name="tplPer" AutoGenerateColumns="True" IsEnabled="False"  HorizontalAlignment="Left" Margin="40,408,0,0" VerticalAlignment="Top"/>

        <Button Name="docEkle" Content="Ekle" HorizontalAlignment="Left" Margin="540,10,0,0" VerticalAlignment="Top" Width="75" Click="docEkle_Click" />
