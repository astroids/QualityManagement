        <DataGrid Name="persALL" HorizontalAlignment="Left" Margin="540,405,0,0" VerticalAlignment="Top"/>
        <CheckBox Name="mail" Content="Email İle Haber Ver" HorizontalAlignment="Left" Margin="649,353,0,0" VerticalAlignment="Top"/>
        <DataGrid Name="tplDocu" HorizontalAlignment="Left" Margin="40,41,0,0" VerticalAlignment="Top"/>
        <DataGrid Name="docALL" AutoGenerateColumns="True" VerticalAlignment="Top" HorizontalAlignment="Left" Height="auto" Margin="540,44,0,0"  Width="auto"  IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow" RenderTransformOrigin="0.25,-1.8"   />
        <GridSplitter HorizontalAlignment="Left" Height="1007" Margin="502,-173,0,-65" VerticalAlignment="Top" Width="5" RenderTransformOrigin="0.5,0.5">
            <GridSplitter.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.457"/>
                    <TranslateTransform/>
                </TransformGroup>
            </GridSplitter.RenderTransform>
        </GridSplitter>
        <GridSplitter HorizontalAlignment="Left" Height="749" Margin="513,10,0,0" VerticalAlignment="Top" Width="5"/>
        <Button Name="uzat" Content="Genişlet" HorizontalAlignment="Left" Margin="421,10,0,0" VerticalAlignment="Top" Width="75" Click="uzat_Click"/>


    </Grid>
</Controls:MetroWindow>
